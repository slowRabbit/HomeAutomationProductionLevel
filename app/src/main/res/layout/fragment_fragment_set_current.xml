<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="40dp"
    android:padding="20dp"
    android:gravity="center">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="25dp"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@mipmap/current_icon_systemparams"
            android:gravity="bottom|center_horizontal"
            android:paddingRight="15dp"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:hint="Current"
            android:inputType="number"
            android:textSize="18sp"
            android:fontFamily="sans-serif-light"
            android:gravity="bottom|center_horizontal"
            android:layout_gravity="center"
            android:paddingBottom="15dp"
            android:id="@+id/fragmentSetCurrent_et_current"
            />

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:text="(Enter Current between 0-1000 Amps)"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="5dp"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="25dp"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@mipmap/time_icon"
            android:gravity="bottom|center_horizontal"
            android:paddingRight="15dp"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:hint="Time"
            android:inputType="number"
            android:textSize="18sp"
            android:fontFamily="sans-serif-light"
            android:layout_gravity="center"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="15dp"
            android:id="@+id/fragmentSetCurrent_et_time"
            />

    </LinearLayout>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:text="(Enter Time between 0-2880 Minutes)"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="5dp"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        />

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_width="190dp"
        android:layout_height="50dp"
        fancy:fb_borderColor="#ffffff"
        fancy:fb_borderWidth="0dp"
        fancy:fb_defaultColor="@color/colorOrange1"
        fancy:fb_focusColor="@color/colorOrange2"
        android:fontFamily="sans-serif-light"
        fancy:fb_radius="30dp"
        android:gravity="center"
        fancy:fb_text="Set Current"
        fancy:fb_textColor="#FFFFFF"
        android:layout_gravity="center"
        android:id="@+id/fragmentSetCurrent_btn_setVoltage"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        />

</LinearLayout>
