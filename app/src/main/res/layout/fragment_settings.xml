<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="40dp"
    android:padding="20dp"
    android:gravity="center"
    android:layout_gravity="center"
    tools:context="insectiousapp.com.powersupply.Fragments.FragmentSetVoltage">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Setup Bluetooth connection and check status"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="15dp"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Current Status :"
            android:textSize="16sp"
            android:fontFamily=""
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Disconnected"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5dp"
            />

    </LinearLayout>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/fragmentSettings_btn_connectBluetooth"
        android:layout_width="190dp"
        android:layout_height="50dp"
        fancy:fb_borderColor="#ffffff"
        fancy:fb_borderWidth="0dp"
        fancy:fb_defaultColor="@color/colorOrange1"
        fancy:fb_focusColor="@color/colorOrange2"
        android:fontFamily="sans-serif-light"
        fancy:fb_radius="30dp"
        android:gravity="center"
        fancy:fb_text="Connect"
        fancy:fb_textColor="#FFFFFF"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        />

</LinearLayout>
